<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.mvvivek.mightybookings.MainActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_gray_border_bottom"
        android:id="@+id/appbarlayout">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:src="@drawable/mb1"
                    android:background="#53E3A6"
                    android:id="@+id/logo"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/logo"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/mighty"
                    android:text="MightyBookings"
                    android:textColor="#000"
                    android:textSize="20sp"/>




            </RelativeLayout>


        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scr1"
        android:foregroundGravity="center"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/appbarlayout"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/denzong"
                android:layout_gravity="center"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    app:cardBackgroundColor="#8000"
                    android:layout_gravity="center">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rel1"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DenzongHall(Gangtok)"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/textView34"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="25sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView34"
                            android:orientation="horizontal"
                            android:id="@+id/lin1"
                            android:layout_marginTop="20dp"
                            android:layout_alignParentStart="true">

                            <ImageView
                                android:layout_width="211dp"
                                android:layout_height="150dp"
                                android:src="@drawable/padman"

                                android:layout_weight="1"
                                android:id="@+id/imageView2" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lin1"
                            android:text="Lakshmi is a newly married welder who causes a stir in his East Indian village when he tries to revolutionize the manufacturing of sanitary napkins for women."
                            android:lines="4"
                            android:textColor="#fff"
                            android:textStyle="italic"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:id="@+id/tv2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv2"
                            android:text="  Watch Trailer"
                            android:textColor="#067aff"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textAlignment="gravity"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:id="@+id/tv3"/>


                        <android.support.v7.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:id="@+id/denzongbutton"
                            android:text="  book now"
                            android:background="@drawable/rounded_button"
                            android:textColor="#2a5b46"
                            android:padding="15dp"
                            android:drawableLeft="@drawable/ic_action_name"
                            android:layout_below="@+id/tv3"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/denzong"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="430dp"
                    app:cardBackgroundColor="#8000"
                    android:layout_marginTop="5dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rell1"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Imperial Talkies(Namchi)"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/textView343"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="25sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView343"
                            android:orientation="horizontal"
                            android:id="@+id/lin11"
                            android:layout_marginTop="20dp"
                            android:layout_alignParentStart="true">

                            <ImageView
                                android:layout_width="211dp"
                                android:layout_height="150dp"
                                android:src="@drawable/padman"
                                android:layout_weight="1"
                                android:id="@+id/imageView22" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lin11"
                            android:text="Lakshmi is a newly married welder who causes a stir in his East Indian village when he tries to revolutionize the manufacturing of sanitary napkins for women."
                            android:lines="4"
                            android:textColor="#fff"
                            android:textStyle="italic"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:id="@+id/tv22"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv22"
                            android:text="Watch Trailer"
                            android:textColor="#067aff"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:id="@+id/tv33"/>


                        <android.support.v7.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:id="@+id/imperialbutton"
                            android:text="  book now"
                            android:background="@drawable/rounded_button"
                            android:drawableLeft="@drawable/ic_action_name"
                            android:textColor="#2a5b46"
                            android:padding="15dp"
                            android:layout_below="@+id/tv33"
                            android:layout_centerHorizontal="true" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>

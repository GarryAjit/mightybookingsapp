<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">

        <shape>

            <solid
                android:color="#53e3a6"/>
            <stroke
                android:color="#fff"
                android:width="1dp"/>
            <corners
                android:radius="10dp"/>

        </shape>

    </item>

    <item>

        <shape>

            <solid
                android:color="#fff"/>
            <stroke
                android:color="#55c4c6c4"
                android:width="1dp"/>

            <corners
                android:radius="10dp"/>

        </shape>

    </item>

</selector>